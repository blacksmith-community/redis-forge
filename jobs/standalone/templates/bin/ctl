#!/bin/bash
set -eu

source /var/vcap/jobs/standalone/helpers/ctl_setup.sh 'standalone'

export LANG=en_US.UTF-8
case $1 in
  start)
    pid_guard $PIDFILE $JOB_NAME

    sysctl vm.overcommit_memory=1
    echo never > /sys/kernel/mm/transparent_hugepage/enabled

    chpst -u vcap:vcap redis-server --version > /var/vcap/store/standalone/REDIS_VERSION

    <% if p('persistent') %>
    cd /var/vcap/store/standalone
    <% end %>

    echo $$ > $PIDFILE
    exec chpst -u vcap:vcap redis-server \
         $JOB_DIR/config/redis.conf \
         >>$LOG_DIR/$JOB_NAME.log 2>&1
    ;;

  stop)
    kill_and_wait $PIDFILE
    ;;

  *)
    echo "Usage: ctl {start|stop}"
    ;;
esac
exit 0
